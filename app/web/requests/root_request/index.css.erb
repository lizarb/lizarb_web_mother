/* SECTION COMMUNITY */

#community-background {
  position: relative;
}

#community-background > div {
  height: 300px;
  background: white;
  <%= "background-color: yellow;" if @colors %>
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1;
}

section#community {
  <%= "background-color: yellow;" if @colors %>
  background: #2A8031;
  color: var(--primary-gray);
}

section#community .gridbox {
  /* custom screen */
}

/* mobile */
@media screen and (max-width: 1200px) {
  section#community .gridbox {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr 1fr;
    grid-gap: 40px;

    background-color: #fcfcfc;
    padding: 0px 50px;
  }
}

/* desktop */
@media screen and (min-width: 1200px) {
  section#community .gridbox {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr;
    grid-gap: 20px;
    grid-gap: 40px;

    background-color: #fcfcfc;
    padding: 50px;
  }
}

section#community .gridbox > div:nth-child(1) {
  /* background-color: red; */
}

section#community .gridbox > div:nth-child(1) h2 {
  margin: 0 0 0 0;
  font-size: 5rem;
  line-height: 4rem;
  color: var(--primary-green);
}

section#community .gridbox > div:nth-child(1) p {
  font-size: 2.5rem;
}

section#community .gridbox > div:nth-child(2) {
  /* background-color: yellow; */
}

section#community .gridbox > div:nth-child(2) img {
  width: 100%;  
}

section#community .gridbox > div:nth-child(2) p {
  /* margin: 0 0 4px 0; */
  font-size: 2rem;
}
















/* SECTION DOCS */

section#docs {
  <%= "background-color: green;" if @colors %>
  background-color: var(--primary-green);
  color: white; /* negativo */
}

section#docs .container > div {
  /* border: 1px solid black; */
}

section#docs h2 {
  font-size: 4rem;
  line-height: 3rem;
}
section#docs p {
  /* same style as code */

  font-size: 2rem;
  line-height: 3rem;
  letter-spacing: 0.25rem;
  margin: 0 0 0 0;
  color: white;

}

section#docs table td {
  padding: 10px;
}

section#docs a {
  font-weight: bold;
   text-decoration: underline;
/*  text-decoration: none;*/
  color: white;
  /* custom screen */
}

/* mobile */
@media screen and (max-width: 1200px) {
  section#docs p {
    font-size: 1.5rem;
    /* letter-spacing: 0.25rem; */
    letter-spacing: 0.12rem;
    
  }
}

/* desktop */
@media screen and (min-width: 1200px) {
  section#docs p {
    font-size: 1.5rem;
    line-height: 2rem;
    letter-spacing: 0.5rem;
  }
}











/* Add a new breakpoint for small mobile devices (max-width: 400px) */
@media screen and (max-width: 400px) {
  body {
    font-size: 20px;
  }

  .container {
    padding: 5px;
  }

  header .logo {
    width: 150px;
    height: 68px;
  }

  header nav a {
    padding: 5px 20px;
  }

  section {
    padding: 25px 0;
  }

  section#project .gridbox {
    grid-gap: 20px;
  }

  section#project .gridbox > div:nth-child(2) h1 {
    font-size: 4rem;
    line-height: 3rem;
  }

  section#project .gridbox > div:nth-child(2) p {
    font-size: 1.5rem;
  }

  section#project .gridbox > div:nth-child(2) a {
    font-size: 1.2rem;
    padding: 5px 10px;
  }

  section#community .gridbox {
    grid-gap: 20px;
    padding: 0px 20px;
  }

  section#community .gridbox > div:nth-child(1) h2 {
    font-size: 3rem;
    line-height: 2.5rem;
  }

  section#community .gridbox > div:nth-child(1) p {
    font-size: 1.5rem;
  }

  section#community .gridbox > div:nth-child(2) p {
    font-size: 1.5rem;
  }

  section#docs h2 {
    font-size: 3rem;
    line-height: 2.5rem;
  }

  section#docs p a {
    font-size: 1.2rem;
    letter-spacing: 0.1rem;
  }
}
