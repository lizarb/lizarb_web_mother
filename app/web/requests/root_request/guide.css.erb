/* SECTION GUIDE */

section#guide {
  color: var(--primary-gray);
}



section#guide .gridbox {
  /* custom screen */
}

/* 
section#guide .gridbox > div {

}
*/

/* mobile */
@media screen and (max-width: 1200px) {
  section#guide .gridbox {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr 1fr;
    grid-gap: 120px;
  }
}

/* desktop */
@media screen and (min-width: 1200px) {
  section#guide .gridbox {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr;
    grid-gap: 40px;
  }
}


<% if false %>


section#guide .gridbox > div:nth-child(1) {
  /* background-color: red; */
}

section#guide .gridbox > div:nth-child(1) img {
  width: 100%;  
}

section#guide .gridbox > div:nth-child(2) {
  /* background-color: yellow; */
}

section#guide .gridbox > div:nth-child(2) h1 {
  margin: 0 0 0 0;
  font-size: 6rem;
  line-height: 5rem;
}

section#guide .gridbox > div:nth-child(2) p {
  font-size: 2rem;
}

section#guide .gridbox > div:nth-child(2) a {
  /* pill button with a green background and a white color */
  background-color: var(--primary-green);
  color: white;
  padding: 10px 20px;
  border-radius: 20px;
  text-decoration: none;
  font-size: 1.5rem;
  
}


<% end %>


