/* SECTION COMMUNITY */

#community-background {
  position: relative;
}

#community-background > div {
  height: 300px;
  background: white;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1;
}

/* above is repeated */

section#community-head {
  background: #2A8031;
  color: var(--primary-gray);
}

section#community-head .gridbox {
  /* custom screen */
}

/* mobile */
@media screen and (max-width: 1200px) {
  section#community-head .gridbox {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr 1fr;
    grid-gap: 40px;

    background-color: #fcfcfc;
    padding: 0px 50px;
  }
}

/* desktop */
@media screen and (min-width: 1200px) {
  section#community-head .gridbox {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr;
    grid-gap: 20px;
    grid-gap: 40px;

    background-color: #fcfcfc;
    padding: 50px;
  }
}


