/* mobile */
@media screen and (max-width: 1200px) {
  section.community-item .gridbox {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr 1fr;
    grid-gap: 120px;
  }
}

/* desktop */
@media screen and (min-width: 1200px) {
  section.community-item .gridbox {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr;
    grid-gap: 40px;
  }
}


